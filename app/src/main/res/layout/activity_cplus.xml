<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Cplus">

    <View
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#F77D7D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- List of topics -->
    <LinearLayout
        android:id="@+id/topics_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/cptopic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction to C++"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/jacques_francois"
            android:clickable="true" />

        <TextView
            android:id="@+id/cptopic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variables, Data Type and Operators"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/cptopic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conditional and Control Statements"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/cptopic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pointers and Arrays"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/cptopic5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Functions in C++"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/cptopic6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="String in C++"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />
        <TextView
            android:id="@+id/cppnotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:clickable="true"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:text="VIEW NOTES "
            android:background="@drawable/edt_bg6"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
