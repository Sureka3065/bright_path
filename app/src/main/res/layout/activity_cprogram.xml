<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Cprogram">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FA8072"
        android:padding="8dp"
        tools:ignore="MissingConstraints">
    </LinearLayout>

    <!-- List of topics -->
    <LinearLayout
        android:id="@+id/topics_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/ctopic1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Introduction to C"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/ctopic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variables, Data Type and Operators"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/ctopic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control Flow Statements"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/ctopic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="String Handling and Arrays"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/ctopic5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Functions in C"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/ctopic6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pointer, Unions and Structures"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/ctopic7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dynamic Memory Allocation"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />
        <TextView
            android:id="@+id/ctopic8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linked Lists"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />
        <TextView
            android:id="@+id/cnotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:clickable="true"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:text="VIEW NOTES "
            android:background="@drawable/edt_bg6"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
