<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Java">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FA8072"
        android:padding="8dp"
        tools:ignore="MissingConstraints">
    </LinearLayout>

    <!-- List of topics -->
    <LinearLayout
        android:id="@+id/topics_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/jtopic1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Introduction to Java"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/jtopic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Variables,Data Type"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/jtopic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Control Flow"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/jtopic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Methods"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/jtopic5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Classes And Objects"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/jtopic6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Arrays and Collections"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:clickable="true" />


    <TextView
        android:id="@+id/javanotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:fontFamily="@font/jacques_francois"
        android:padding="8dp"
        android:text="VIEW NOTES "
        android:background="@drawable/edt_bg6"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
