<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Python">

    <View
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#F77D7D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- List of topics -->
    <LinearLayout
        android:id="@+id/topics_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/pytopic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction to Python"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/jacques_francois"
            android:clickable="true" />

        <TextView
            android:id="@+id/pytopic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variables and Data Type "
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />
        <TextView
            android:id="@+id/pytopic6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operators in python"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/pytopic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conditional statement in python"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/pytopic7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looping in python"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />
        <TextView
            android:id="@+id/pytopic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Python Libraries"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/pytopic5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Functions in python "
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/pytopic8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrays in python "
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/pynotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/edt_bg6"
            android:clickable="true"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/jacques_francois"
            android:padding="8dp"
            android:text="VIEW NOTES "
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
